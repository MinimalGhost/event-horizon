<div class="index">
  <h2>Listing Locations</h2>
  <button><%= link_to 'New location', new_location_path %></button>
  <table class="table">
    <th>Name</th>
    <th>Capacity</th>
    <% @locations.each do |location| %>
    <tr>
      <td><%= location.name %></td>
      <td><%= location.capacity %></td>
      <td><%= link_to 'Show', location_path(location) %></td>
      <td><%= link_to 'Edit', edit_location_path(location) %></td>
      <td><%= link_to 'Delete', location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
</div>
