<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.label :size %>
  <%= f.number_field :size %>
  <%= f.label :location_id %>
  <%= f.collection_select :location_id, Location.all, :id, :name %>
                      <!-- method, collection, value_method, text_method -->
  <br>
  <%= f.submit %>
  <% if flash[:error] %>
    <ul><%=  %>
    <% flash[:error].each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
<% end %>
