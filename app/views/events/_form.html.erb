<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <br>
  <%= f.label :time %>
  <%= f.text_field :time %>
  <br>
  <%= f.label :location_id %><br />
  <%= f.select :location_id, Location.all.collect {|l| [ l.name, l.id ] } %>
  <br>
  <%= f.submit %>
<% end %>
